<% include ../partials/header %>

<h1 style="text-align:center;">Edit the Camground</h1>

<div class="container" style="width:30%;margin:25px auto">
	<form action="/camps/<%=foundCamp._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" placeholder="Title" name="camps[title]" value="<%=foundCamp.title%>">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Image Link" name="camps[image]" value="<%=foundCamp.image%>">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Description" name="camps[description]" value="<%=foundCamp.description%>">
		</div>
		<button class="btn btn-large btn-primary btn-block">Submit</button>
	</form>
</div>

<% include ../partials/footer %>	