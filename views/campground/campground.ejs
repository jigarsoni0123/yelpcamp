<% include ../partials/header %>

<div class="container" style="margin-top:20px;">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our best campgrounds from Gujarat</p>
			<p>
				<a class="btn btn-primary btn-large" href="/camps/new">Add New Camp</a>
			</p>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% array.forEach(function(camps){ %>
			<div class="col-md-3 col-sm-6">
					<img src= "<%=camps.image%>" class="img-thumbnail img-fluid">
					<div class="caption">
						<h4> <%= camps.title%> </h4>
					</div>
					<p>
						<a href="/camps/<%=camps._id%>" class="btn btn-primary">More Details</a>
					</p>
			</div>
		<% }); %>
	</div>
	
</div>
<a href="/">Home</a>
<% include ../partials/footer %>